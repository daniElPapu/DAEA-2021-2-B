@model IEnumerable<Practica4.Models.Prestamo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",new { } , htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model.FecPrestamo)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.FecDevolucion)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Libro.Titulo)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FecPrestamo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FecDevolucion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Libro.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdPrestamo }, htmlAttributes: new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdPrestamo }, htmlAttributes: new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdPrestamo }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
