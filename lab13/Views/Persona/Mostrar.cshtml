@model lab13.Models.Persona
@{
    ViewBag.Title = "Mostrar";
}

<h2>Mostrar persona</h2>

<div class="col-12 d-flex justify-content-center">
    <div class="row col-8">
        <div class="card card-body bg-white border-light shadow-sm mb-4">
            <h2 class="h5 mb-4">Mostrar Persona</h2>
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.PersonID, new { @for = "person_id" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.PersonID, new { @class = "form-control", @id = "person_id" })
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.FirstName, new { @for = "first_name" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @id = "first_name" })
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.LastName, new { @for = "last_name" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @id = "last_name" })
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.DateOfBirth, new { @for = "date_of_birth" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control datepicker-input", @id = "date_of_birth" })
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Email, new { @for = "email" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "email" })
                            </div>
                        </div>
                        <div class="col-sm-9 mb-3">
                            @Html.LabelFor(model => model.Address, new { @for = "address" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @id = "address" })
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        @Html.ActionLink("Regresar", "Listar", "Persona", new { @class = "btn btn-blue" })
                    </div>}
        </div>
    </div>
</div>

