@using ReportViewerForMvc;
@model Lab16.Models.Person
@{
    ViewBag.Title = "Reporte de Personas";
}

<h2>Reporte de Personas</h2>
@using (Html.BeginForm("Reporte", "Persona", FormMethod.Post)) { 
    // Textbox para buscar un registro en este caso por NOmbre
    <p>
        Nombre: @Html.TextBox("nombre")
        <input type="submit" value="Buscar" class="btn btn-info" />
    </p>
}
<div style="width:100%; height: 80%">
    @if (ViewBag.ReportViewer != null)
    {
        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, htmlAttributes: new { @style = "display:block;width:60%;margin:auto; height:100%" })
    }
</div>
<style>
    iframe {
        border-width:0;
    }
</style>

